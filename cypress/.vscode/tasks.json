{
	"version": "2.0.0",
	"tasks": 
	[
		{
			"label": "open cypress",
			"command": "node",
			"type": "shell",
			"args": [
				"./node_modules/cypress/bin/cypress",
                "open"
            ]
		},
		{
			"label": "run all",
			"command": "node",
			"type": "shell",
			"args": [
				"./node_modules/cypress/bin/cypress",
				"run"
            ]			
		},
		{
			"label": "run current file",
			"command": "node",
			"type": "shell",
			"args": [
				"./node_modules/cypress/bin/cypress",
				"run",
				"--spec",
				"${relativeFile}"
            ]
		}
	]
}